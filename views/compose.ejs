        <label for="title">Title</label>
        <input class="form-control" type="text" name="postTitle" id="title">
        <br>
        <label for="post">Post</label>
        <textarea class="form-control" name="postBody" id="post" cols="30" rows="5"></textarea>
        <br>
        
    </div>

    <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

